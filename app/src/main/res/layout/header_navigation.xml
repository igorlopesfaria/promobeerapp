<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_nav_menu_header">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin_big">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIMG"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            android:background="@drawable/circle_white"
            android:src="@drawable/ic_face"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/layout_margin_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_big"
            android:textColor="@android:color/white"
            android:text="Igor Lopes de Faria"/>

        <TextView
            android:id="@+id/website"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_normal"
            android:text="igorlopesfaria@gmail.com"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</RelativeLayout>